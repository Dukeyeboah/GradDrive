rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Admin check - verify user document exists and has admin role
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
             get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Photographers folder
    match /photographers/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Posters folder - only admins can upload/delete
    match /posters/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Ebooks folder
    match /ebooks/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Cap designs folder
    match /cap-designs/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User uploads folder
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
