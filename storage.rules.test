rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // TEMPORARY TEST RULE - Allows ANY authenticated user to upload
    // USE THIS ONLY FOR TESTING - REMOVE AFTER DEBUGGING!
    
    // Posters folder - allow authenticated users (for testing)
    match /posters/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null; // Any authenticated user can upload
    }

    // Photographers folder
    match /photographers/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Ebooks folder
    match /ebooks/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Cap designs folder
    match /cap-designs/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // User uploads folder
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

